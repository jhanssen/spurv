{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types"],
        "target": "es2020",
        "noUncheckedIndexedAccess": true,
        "strictBindCallApply": true,
        "stripInternal": true,
        "newLine": "LF",
        "module": "es2022",
        "declaration": false,
        "moduleResolution": "node",
        "pretty": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "downlevelIteration": true,
        "strict": true,
        "sourceMap": true,
        "incremental": true,
        "lib": ["es2021"],
        "baseUrl": "."
    },
    "include": ["./src/*.ts"]
}
